<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_centerVertical="true"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
android:layout_marginBottom="5dp"
    android:padding="3dp">

    <androidx.cardview.widget.CardView

        android:id="@+id/card_view"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="17dp"
                android:textColor="#A3000000"
                android:textSize="9sp"
                tools:text="爱吃飞枝的飞枝" />

            <androidx.cardview.widget.CardView

                android:id="@+id/cardView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"
                app:cardCornerRadius="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="#FFF0F3FA">

                    <TextView
                        android:id="@+id/chapterName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF5E6C86"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.31"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        tools:text="课程推荐" />

                    <ImageView
                        android:id="@+id/triangle"
                        android:layout_width="8dp"
                        android:layout_height="13dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.29"
                        app:layout_constraintStart_toEndOf="@+id/chapterName"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/sanjiaoxing_3"
                        android:contentDescription="TODO" />

                    <LinearLayout

                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        app:layout_constraintBottom_toBottomOf="@+id/triangle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/chapterName"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/title"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardView2"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"

                android:maxEms="13"
                android:textColor="#FF3E3C3D"
                android:textSize="13sp"
                tools:text="弄潮踏浪勇创新，扬帆远航偕时行" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/author"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="17dp"
                android:background="#000000"
                app:cardCornerRadius="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#FFF5F5F5">

                    <TextView
                        android:id="@+id/superChapterName"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:gravity="center"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/categery"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        tools:text="干货资源" />

                    <ImageView
                        android:id="@+id/categery"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.07"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/fenlei"
                        tools:ignore="DuplicateIds"
                        android:contentDescription="TODO" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/niceShareDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/cardView3"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/cardView3"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintStart_toEndOf="@+id/cardView3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.87"
                tools:text="2022.7.3" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="25dp"
                android:src="@drawable/icon_card_selected"
                android:contentDescription="TODO" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_rv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/imageView"
                android:layout_alignBottom="@id/niceShareDate"
                android:layout_gravity="right"
                android:layout_marginTop="130dp"
                android:layout_marginRight="40dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>